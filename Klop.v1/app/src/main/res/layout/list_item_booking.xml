<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginBottom="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="5dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:id="@+id/linearlayoutItemBooking">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:textStyle="bold"
                android:text="  New Topsy"
                android:drawableLeft="@mipmap/outlet"
                android:textSize="16sp"
                android:padding="1.5dp"/>

            <TextView
                android:id="@+id/tvGuest"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Dicon"
                android:drawableLeft="@mipmap/guest"
                android:textColor="@color/secondaryText"
                android:textSize="14dp"
                android:padding="1.5dp"
                android:layout_marginBottom="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Selasa, 29 September 2018"
                android:textSize="14dp"
                android:drawableLeft="@mipmap/calendar"
                android:textColor="@color/secondaryText2"
                android:textStyle="italic"
                android:padding="1.5dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14:50"
                android:textColor="@color/secondaryText2"
                android:textStyle="italic"
                android:textSize="14dp"
                android:layout_marginLeft="0dp"
                android:padding="1.5dp"
                android:layout_marginBottom="1dp"/>

        </LinearLayout>



            <!--<TextView-->
            <!--android:id="@+id/txt_notice_rating"-->
            <!--android:layout_below="@+id/layoutfoto"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:textColor="@color/gold"-->
            <!--android:layout_marginLeft="2dp"-->
            <!--android:text="3.8"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="1.5dp" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/txt_notice_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="12sp"
            android:padding="1.5dp"/>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/wrapperOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/background_open2"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStatusOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutfoto"
                    android:paddingBottom="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp"
                    android:text="MENUNGGU"
                    android:textColor="#0d9c20"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>