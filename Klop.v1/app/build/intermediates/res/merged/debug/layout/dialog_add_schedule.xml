            <!--android:id="@+id/tvJudul"-->
            <!--android:text="Perawatan Baru"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:textSize="20sp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:paddingLeft="90dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/white"-->
            <!--/>-->

            <!--<ImageButton-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:id="@+id/btnClose"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:background="#00ffffff"-->
            <!--android:src="@drawable/ic_close_black_24dp"/>-->
            <!--</RelativeLayout>-->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_hari"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/input_layout_desc">

                <EditText
                    android:id="@+id/edHari"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:backgroundTint="#999"
                    android:layout_marginTop="0dp"
                    android:hint="Pilih Hari"
                    android:text="Setiap hari"
                    android:singleLine="true"
                    android:textColor="@color/place_autocomplete_prediction_secondary_text"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_buka"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/input_layout_namatr">

                    <EditText
                        android:id="@+id/edBuka"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#999"
                        android:focusable="false"
                        android:layout_marginTop="0dp"
                        android:hint="Jam Buka"
                        android:text="00:00"
                        android:inputType="textMultiLine"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_tutup"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/input_layout_desc">

                    <EditText
                        android:id="@+id/edTutup"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#999"
                        android:layout_marginTop="0dp"
                        android:focusable="false"
                        android:hint="Jam Tutup"
                        android:text="00:00"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>




            <!--<LinearLayout-->
