<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp">
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@mipmap/delete" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@mipmap/pencil" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="0dp">

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tvTreatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colouring"
                android:textSize="18dp"
                android:textColor="@color/secondaryText"
                android:lineSpacingExtra="6dp"
                />
            <TextView
                android:id="@+id/tvDescTr"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:textColor="@color/secondaryText2"
                android:text="Treatment terfavorite dengan layanan memuaskan"
                android:textSize="16dp"
                android:textStyle="italic"
                android:lineSpacingExtra="6dp"
                />
        </LinearLayout>
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="3dp"-->
        <!--android:layout_marginBottom="2dp"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:background="@drawable/bottom_shadow" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tvHargaTreatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryText"
                android:text="Rp 2.825.000"
                android:textSize="18dp"
                android:lineSpacingExtra="6dp"
                />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
