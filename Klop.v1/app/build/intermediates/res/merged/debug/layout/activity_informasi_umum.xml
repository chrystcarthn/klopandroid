<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addStoreLayout"
    tools:context="appdeveloper.klop.klop.Activity.AddStore">

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Mendaftarkan Outlet" />
    </android.support.design.widget.AppBarLayout>




    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tvBanner1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#999"
                            android:text="Informasi Umum"
                            android:textColor="@color/primaryText"
                            android:textSize="28sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_nama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp">

                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#999"
                            android:hint="@string/hint_namaoutlet"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@color/primaryText"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_telepon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edTelepon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#999"
                            android:hint="@string/hint_telp"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="@color/primaryText"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text"
                        android:textColorHint="#999"
                        app:errorTextAppearance="@style/error_appearance">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edAlamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#999"
                            app:met_helperText="Masukan alamat dengan lengkap seperti: nama gedung, nomor lantai, nomor blok, nama jalan, kecamatan, kelurahan dan nama kota."
                            android:layout_centerHorizontal="true"
                            android:drawablePadding="5dp"
                            android:paddingBottom="0dp"
                            android:paddingTop="0dp"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:hint="Alamat"
                            android:paddingLeft="3dp"
                            android:singleLine="false"
                            android:textColor="@color/primaryText"
                            android:textColorHint="#999"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/hintMap"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:text="Dapatkan koordinat dengan membuka peta dan tetapkan posisi agar outlet Anda lebih mudah ditemukan"/>


                    <RelativeLayout
                        android:id="@+id/layoutmap"
                        android:layout_below="@id/hintMap"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp">


                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"

                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/btnOpenMap"
                            android:background="#d0ffffff"
                            android:visibility="gone"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_search_black_24dp" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_kordinat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false">

                        <EditText
                            android:id="@+id/edKordinat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:backgroundTint="#999"
                            android:focusable="false"
                            android:hint="Kordinat"
                            android:singleLine="true"
                            android:textColor="@color/primaryText"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_latitude"
                                android:layout_width="159dp"
                                android:layout_height="match_parent"
                                android:enabled="false"
                                android:weightSum="1"
                                android:visibility="gone"
                                >

                                <EditText
                                    android:id="@+id/edLatitude"
                                    android:layout_width="159dp"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="#999"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="@string/hint_latitude"
                                    android:singleLine="true"
                                    android:visibility="gone"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_longitude"
                            android:layout_width="159dp"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:weightSum="1"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/edLongitude"
                                android:layout_width="159dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="#999"
                                android:clickable="false"
                                android:enabled="false"
                                android:visibility="gone"
                                android:hint="@string/hint_longitude"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnDataUmumLanjutkan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_selector_yellow2"
        android:text="@string/btn_createoutlet"
        android:textColor="@android:color/white"
        />


</RelativeLayout>
