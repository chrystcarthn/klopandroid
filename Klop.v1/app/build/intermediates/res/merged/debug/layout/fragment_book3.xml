<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="70dp"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        >


        <TextView
            android:id="@+id/tvSapaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedikit lagi, Chrysant!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periksa kembali data Anda dan konfirmasi untuk menyelesaikan proses reservasi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            />


        <View
            android:id="@+id/lineSeparator1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="0.5dp"
            android:background="@color/secondaryText2" />

    <!--biodata diri-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Data Pelanggan"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dipesan atas Nama"

        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGuest"
        android:text="Yudi Setiawan"
        android:textColor="@color/secondaryText"
        android:textSize="16sp"
        android:paddingTop="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhone"
        android:text="081250777803"
        android:textColor="@color/secondaryText"
        android:textSize="16sp"
        android:paddingTop="3dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Orang"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPeople"
            android:text="2 orang"
            android:textColor="@color/secondaryText"
            android:textSize="17sp"
            android:paddingTop="3dp"
            />

        <View
            android:id="@+id/lineSeparator2"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="0.5dp"
            android:background="@color/secondaryText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alokasi"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outlet"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSalon"
            android:text="New Topsy"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            android:paddingTop="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAlamatSalon"
            android:text="Jalan Babarsari No. 89 "
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            android:paddingTop="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari dan Tanggal"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTanggal"
                android:text="Selasa, 23 Mei 2018"
                android:textColor="@color/secondaryText"
                android:textSize="16sp"
                android:paddingTop="3dp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/darker_gray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJam"
                    android:text="12:30"
                    android:textColor="@color/secondaryText"
                    android:textSize="16sp"
                    android:paddingTop="3dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/lineSeparator3"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="0.5dp"
            android:background="@color/secondaryText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perawatan yang Anda Pesan"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            tools:listitem="@layout/list_item_cart_confirmation" />


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:layout_marginTop="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.750.000"
                android:layout_alignParentRight="true"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/open"
                android:layout_marginTop="10dp"
                />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnKonfirmasiReservasi"
        android:text="KONFIRMASI"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:background="@drawable/btn_selector_yellow2"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        />
</RelativeLayout>
