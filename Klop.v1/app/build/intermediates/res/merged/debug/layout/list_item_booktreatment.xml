<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="0dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTreatment"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Colouring"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/secondaryText"
                android:lineSpacingExtra="6dp"
                />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button"
                    android:layout_height="25dp"
                    android:layout_width="75dp"
                    app:backGroundColor ="@color/colorPrimary"
                    app:textSize="4sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tvDescTr"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/secondaryText2"
                android:text="Treatment terfavorite dengan layanan memuaskan"
                android:textSize="12dp"
                android:textStyle="italic"
                android:lineSpacingExtra="6dp"
                />


            <TextView
                android:id="@+id/tvHargaTreatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/secondaryText"
                android:text="Rp 125.000"
                android:textSize="14dp"
                android:lineSpacingExtra="6dp"
                />




        </LinearLayout>
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="3dp"-->
        <!--android:layout_marginBottom="2dp"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:background="@drawable/bottom_shadow" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
           >

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="150dp"
                android:layout_height="45dp"
                numberpicker:min="0"
                numberpicker:max="10"
                numberpicker:value="-5"
                numberpicker:unit="1"
                numberpicker:focusable="false"
                numberpicker:custom_layout="@layout/number_picker_custom_layout"
                />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
    <!--</android.support.v7.widget.CardView>-->




