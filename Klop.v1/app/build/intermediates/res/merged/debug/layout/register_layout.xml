<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@drawable/main_header_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/regheader"
        android:layout_alignParentLeft="true">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:scaleType="fitXY"
        android:src="@drawable/register_header"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:id="@+id/register_header"
        />
         <android.support.design.widget.TextInputLayout
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/register_header"
                    android:id="@+id/nameWrapper"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/place_autocomplete_prediction_secondary_text"
                    android:textColorHint="#999"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <EditText
                        android:id="@+id/edName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:hint="Nama"
                        android:paddingLeft="3dp"
                        android:singleLine="true"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text"
                        android:textColorHint="#999"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameWrapper"
                    android:id="@+id/phoneWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/place_autocomplete_prediction_secondary_text"
                    android:textColorHint="#999"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <EditText
                        android:id="@+id/edPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edName"
                        android:hint="No. Telepon"
                        android:inputType="phone"
                        android:paddingLeft="3dp"
                        android:singleLine="true"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text"
                        android:textColorHint="#999"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>




                <android.support.design.widget.TextInputLayout
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/phoneWrapper"
                    android:id="@+id/passWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/place_autocomplete_prediction_secondary_text"
                    android:textColorHint="#999"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <EditText
                        android:id="@+id/edPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:hint="Kata Sandi"
                        android:inputType="textPassword"
                        android:paddingLeft="3dp"
                        android:singleLine="true"
                        android:textColor="@color/place_autocomplete_prediction_secondary_text"
                        android:textColorHint="#999"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DAFTAR"
                    android:id="@+id/btnRegister"
                    android:background="@drawable/btn_selector_yellow"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/passWrapper"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentTop="false"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:onClick="onClick" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btnRegister"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Sudah punya akun? Masuk"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnRegister"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/alreadyuser"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDarker"
                android:onClick="onClick"/>

        </LinearLayout>

</RelativeLayout>
</RelativeLayout>